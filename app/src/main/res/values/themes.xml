<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MStroy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Status bar color. -->
    </style>
    <style name="nav_view" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
    </style>
    <style name="general_text">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="register_edittext">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="maxLines">1</item>
    </style>
    <style name="dialog"
        parent="android:Theme.Material.Dialog">
        <item name="android:colorAccent">@color/black</item>
        <item name="android:colorPrimary">@color/grey_back</item>
        <item name="android:colorPrimaryDark">@color/grey</item>
    </style>
    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>
    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">@dimen/_20sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_20sdp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>