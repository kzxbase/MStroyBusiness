<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/black">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_scrollFlags="enterAlways">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_bell"
                android:layout_width="48dp"
                app:cardElevation="0dp"
                android:layout_marginStart="16dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_height="48dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_bell"/>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/russo_one"
                android:text="LEROY MERLIN"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="24sp"
                />
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_pencil"
                android:layout_width="48dp"
                app:cardElevation="0dp"
                android:layout_marginStart="16dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_height="48dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_pencil"/>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:background="@color/grey_back"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_15sdp"
                    android:visibility="visible"
                    app:cardBackgroundColor="@color/black"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_photo"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_138sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_20sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto"
                                android:text="Время работы"
                                android:textColor="@color/grey"
                                android:textSize="16sp" />

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cv1"
                                android:layout_width="@dimen/_13sdp"
                                android:layout_height="@dimen/_13sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="@dimen/_2sdp"
                                app:cardBackgroundColor="@color/grey_card"
                                app:cardCornerRadius="@dimen/_45sdp">

                                <TextView
                                    android:id="@+id/tv1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/roboto"
                                    android:text="ПН"
                                    android:textColor="@color/grey"
                                    android:textSize="6.5sp" />
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cv2"
                                android:layout_width="@dimen/_13sdp"
                                android:layout_height="@dimen/_13sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                app:cardBackgroundColor="@color/grey_card"
                                app:cardCornerRadius="@dimen/_45sdp">

                                <TextView
                                    android:id="@+id/tv2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/roboto"
                                    android:text="ВТ"
                                    android:textColor="@color/grey"
                                    android:textSize="6.5sp" />
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cv3"
                                android:layout_width="@dimen/_13sdp"
                                android:layout_height="@dimen/_13sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                app:cardBackgroundColor="@color/grey_card"
                                app:cardCornerRadius="@dimen/_45sdp">

                                <TextView
                                    android:id="@+id/tv3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/roboto"
                                    android:text="СР"
                                    android:textColor="@color/grey"
                                    android:textSize="6.5sp" />
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cv4"
                                android:layout_width="@dimen/_13sdp"
                                android:layout_height="@dimen/_13sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                app:cardBackgroundColor="@color/grey_card"
                                app:cardCornerRadius="@dimen/_45sdp">

                                <TextView
                                    android:id="@+id/tv4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/roboto"
                                    android:text="ЧТ"
                                    android:textColor="@color/grey"
                                    android:textSize="6.5sp" />
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cv5"
                                android:layout_width="@dimen/_13sdp"
                                android:layout_height="@dimen/_13sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                app:cardBackgroundColor="@color/grey_card"
                                app:cardCornerRadius="@dimen/_45sdp">

                                <TextView
                                    android:id="@+id/tv5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/roboto"
                                    android:text="ПТ"
                                    android:textColor="@color/grey"
                                    android:textSize="6.5sp" />
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cv6"
                                android:layout_width="@dimen/_13sdp"
                                android:layout_height="@dimen/_13sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                app:cardBackgroundColor="@color/grey_card"
                                app:cardCornerRadius="@dimen/_45sdp">

                                <TextView
                                    android:id="@+id/tv6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/roboto"
                                    android:text="СБ"
                                    android:textColor="@color/grey"
                                    android:textSize="6.5sp" />
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cv7"
                                android:layout_width="@dimen/_13sdp"
                                android:layout_height="@dimen/_13sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/_2sdp"
                                app:cardBackgroundColor="@color/grey_card"
                                app:cardCornerRadius="@dimen/_45sdp">

                                <TextView
                                    android:id="@+id/tv7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/roboto"
                                    android:text="ВС"
                                    android:textColor="@color/grey"
                                    android:textSize="6.5sp" />
                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cv_left"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                app:cardBackgroundColor="@android:color/transparent">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/_20sdp"
                                    android:src="@drawable/ic_card_arrow_left" />
                            </com.google.android.material.card.MaterialCardView>


                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cv_time"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_37sdp"
                                android:layout_marginStart="@dimen/_19sdp"
                                android:layout_marginEnd="@dimen/_19sdp"
                                android:layout_weight="1"
                                app:cardBackgroundColor="@color/grey_card"
                                app:cardCornerRadius="@dimen/_4sdp">

                                <TextView
                                    android:id="@+id/tv_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/roboto"
                                    android:text="8:00-22:00"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cv_right"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                app:cardBackgroundColor="@android:color/transparent">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="@dimen/_20sdp"
                                    android:src="@drawable/ic_card_arrow_right" />
                            </com.google.android.material.card.MaterialCardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:orientation="horizontal">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cv_1"
                                android:layout_width="@dimen/_4sdp"
                                android:layout_height="@dimen/_4sdp"
                                android:layout_marginEnd="@dimen/_1sdp"
                                app:cardBackgroundColor="@color/grey_card"
                                app:cardCornerRadius="@dimen/_45sdp" />
                            >

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cv_2"
                                android:layout_width="@dimen/_4sdp"
                                android:layout_height="@dimen/_4sdp"
                                android:layout_marginStart="@dimen/_1sdp"
                                android:layout_marginEnd="@dimen/_1sdp"
                                app:cardBackgroundColor="@color/grey_card"
                                app:cardCornerRadius="@dimen/_45sdp" />

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cv_3"
                                android:layout_width="@dimen/_4sdp"
                                android:layout_height="@dimen/_4sdp"
                                android:layout_marginStart="@dimen/_1sdp"
                                android:layout_marginEnd="@dimen/_1sdp"
                                app:cardBackgroundColor="@color/grey_card"
                                app:cardCornerRadius="@dimen/_45sdp" />

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cv_4"
                                android:layout_width="@dimen/_4sdp"
                                android:layout_height="@dimen/_4sdp"
                                android:layout_marginStart="@dimen/_1sdp"
                                android:layout_marginEnd="@dimen/_1sdp"
                                app:cardBackgroundColor="@color/grey_card"
                                app:cardCornerRadius="@dimen/_45sdp" />

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cv_5"
                                android:layout_width="@dimen/_4sdp"
                                android:layout_height="@dimen/_4sdp"
                                android:layout_marginStart="@dimen/_1sdp"
                                android:layout_marginEnd="@dimen/_1sdp"
                                app:cardBackgroundColor="@color/grey_card"
                                app:cardCornerRadius="@dimen/_45sdp" />

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cv_6"
                                android:layout_width="@dimen/_4sdp"
                                android:layout_height="@dimen/_4sdp"
                                android:layout_marginStart="@dimen/_1sdp"
                                android:layout_marginEnd="@dimen/_1sdp"
                                app:cardBackgroundColor="@color/grey_card"
                                app:cardCornerRadius="@dimen/_45sdp" />

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cv_7"
                                android:layout_width="@dimen/_4sdp"
                                android:layout_height="@dimen/_4sdp"
                                android:layout_marginStart="@dimen/_1sdp"
                                app:cardBackgroundColor="@color/grey_card"
                                app:cardCornerRadius="@dimen/_45sdp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto"
                            android:text="Адрес"
                            android:textColor="@color/grey"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_11sdp"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto"
                            android:text="Аскарова 17"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto"
                            android:text="Лозунг"
                            android:textColor="@color/grey"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_11sdp"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto"
                            android:text="Лучшие предложения по городу только у нас!Лучшие предложения по городу только у нас!Лучшие предложения по "
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:fontFamily="@font/roboto"
                    android:text="Продвижение магазина"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:visibility="visible"
                    app:backgroundTint="@color/grey"
                    app:cornerRadius="@dimen/_10sdp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:visibility="visible"
                    app:cardBackgroundColor="#1E1E21"
                    app:cardCornerRadius="@dimen/_18sdp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_mask_group">

                        <ImageView
                            android:id="@+id/iv_visa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:src="@drawable/ic_visa"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_29sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:src="@drawable/ic_master_card"
                            app:layout_constraintEnd_toStartOf="@id/iv_visa"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/iv_chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_44sdp"
                            android:src="@drawable/ic_chip"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/inder"
                            android:text="****    ****    ****    4568"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/iv_chip" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:fontFamily="@font/roboto"
                    android:text="Добавить карту +"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:visibility="visible"
                    app:backgroundTint="@color/grey"
                    app:cornerRadius="@dimen/_10sdp" />
            </LinearLayout>
            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:indeterminateTint="@color/white"
                android:visibility="gone"
                />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>