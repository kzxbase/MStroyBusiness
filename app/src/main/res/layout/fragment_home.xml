                                android:id="@+id/tv7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ВС"
                                android:textSize="6.5sp"
                                android:layout_gravity="center"
                                android:textColor="@color/grey"
                                android:fontFamily="@font/roboto"
                                />
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_card_arrow_left"
                            />
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_marginStart="@dimen/_19sdp"
                            android:layout_marginEnd="@dimen/_19sdp"
                            app:cardBackgroundColor="@color/grey_card"
                            app:cardCornerRadius="@dimen/_4sdp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/_37sdp"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:text="8:00-22:00"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:fontFamily="@font/roboto"
                                />
                        </com.google.android.material.card.MaterialCardView>
                        <ImageView
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_card_arrow_right"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        >
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cv_1"
                            android:layout_width="@dimen/_4sdp"
                            android:layout_height="@dimen/_4sdp"
                            app:cardCornerRadius="@dimen/_45sdp"
                            app:cardBackgroundColor="@color/grey_card"
                            android:layout_marginEnd="@dimen/_1sdp"
                            />
                        >
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cv_2"
                            android:layout_width="@dimen/_4sdp"
                            android:layout_height="@dimen/_4sdp"
                            app:cardCornerRadius="@dimen/_45sdp"
                            app:cardBackgroundColor="@color/grey_card"
                            android:layout_marginEnd="@dimen/_1sdp"
                            android:layout_marginStart="@dimen/_1sdp"
                            />
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cv_3"
                            android:layout_width="@dimen/_4sdp"
                            android:layout_height="@dimen/_4sdp"
                            app:cardCornerRadius="@dimen/_45sdp"
                            app:cardBackgroundColor="@color/grey_card"
                            android:layout_marginEnd="@dimen/_1sdp"
                            android:layout_marginStart="@dimen/_1sdp"
                            />
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cv_4"
                            android:layout_width="@dimen/_4sdp"
                            android:layout_height="@dimen/_4sdp"
                            app:cardCornerRadius="@dimen/_45sdp"
                            app:cardBackgroundColor="@color/grey_card"
                            android:layout_marginEnd="@dimen/_1sdp"
                            android:layout_marginStart="@dimen/_1sdp"
                            />
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cv_5"
                            android:layout_width="@dimen/_4sdp"
                            android:layout_height="@dimen/_4sdp"
                            app:cardCornerRadius="@dimen/_45sdp"
                            app:cardBackgroundColor="@color/grey_card"
                            android:layout_marginEnd="@dimen/_1sdp"
                            android:layout_marginStart="@dimen/_1sdp"
                            />
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cv_6"
                            android:layout_width="@dimen/_4sdp"
                            android:layout_height="@dimen/_4sdp"
                            app:cardCornerRadius="@dimen/_45sdp"
                            app:cardBackgroundColor="@color/grey_card"
                            android:layout_marginEnd="@dimen/_1sdp"
                            android:layout_marginStart="@dimen/_1sdp"
                            />
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cv_7"
                            android:layout_width="@dimen/_4sdp"
                            android:layout_height="@dimen/_4sdp"
                            app:cardCornerRadius="@dimen/_45sdp"
                            app:cardBackgroundColor="@color/grey_card"
                            android:layout_marginStart="@dimen/_1sdp"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Адрес"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/roboto"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/_20sdp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Аскарова 17"
                        android:textColor="@color/white"
                        android:fontFamily="@font/roboto"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_11sdp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Лозунг"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/roboto"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/_20sdp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="Лучшие предложения по городу только у нас!Лучшие предложения по городу только у нас!Лучшие предложения по "
                        android:textColor="@color/white"
                        android:fontFamily="@font/roboto"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_11sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                app:cornerRadius="@dimen/_10sdp"
                app:backgroundTint="@color/grey"
                android:text="Продвижение магазина"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto"
                />
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="#1E1E21"
                app:cardCornerRadius="@dimen/_18sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                >
