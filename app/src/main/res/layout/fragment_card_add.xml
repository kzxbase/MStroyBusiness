<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:background="@color/black">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_scrollFlags="enterAlways">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/russo_one"
                android:text="Банковская карта"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="24sp"
                />

        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:background="@color/grey_back"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="231dp"
                    android:layout_marginTop="15dp"
                    android:visibility="visible"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_5sdp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="245dp"
                            android:layout_height="162dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="26dp"
                            app:cardBackgroundColor="@color/black"
                            app:cardElevation="2dp"
                            app:cardCornerRadius="6.58dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="match_parent"
                                    android:layout_height="36.21dp"
                                    android:layout_marginStart="12.84dp"
                                    android:layout_marginTop="13.5dp"
                                    android:layout_marginEnd="12.84dp"
                                    app:cardCornerRadius="4.61dp">

                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@android:color/transparent"
                                        android:fontFamily="@font/roboto"
                                        android:hint="Номер карты"
                                        android:inputType="number"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        />
                                </com.google.android.material.card.MaterialCardView>

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="96.45dp"
                                    android:layout_height="37.2dp"
                                    android:layout_marginStart="12.84dp"
                                    android:layout_marginTop="12.84dp"
                                    android:layout_marginEnd="12.84dp"
                                    app:cardCornerRadius="4.61dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:text="Действителен до"
                                            android:textColor="@color/black"
                                            android:textSize="7.64sp" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="7dp"
                                            android:orientation="horizontal">

                                            <EditText
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:background="@android:color/transparent"
                                                android:hint="MM"
                                                android:inputType="number"
                                                android:maxLength="2"
                                                android:textAlignment="center"
                                                android:textColor="@color/black"
                                                android:textSize="9.64sp" />

                                            <View
                                                android:layout_width="0.66dp"
                                                android:layout_height="match_parent"
                                                android:background="@color/black" />

                                            <EditText
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:background="@android:color/transparent"
                                                android:hint="ГГГГ"
                                                android:inputType="number"
                                                android:maxLength="4"
                                                android:textAlignment="center"
                                                android:textColor="@color/black"
                                                android:textSize="9.64sp" />
                                        </LinearLayout>
                                    </LinearLayout>
                                </com.google.android.material.card.MaterialCardView>

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="match_parent"
                                    android:layout_height="36.21dp"
                                    android:layout_marginStart="12.84dp"
                                    android:layout_marginTop="13.5dp"
                                    android:layout_marginEnd="12.84dp"
                                    app:cardCornerRadius="4.61dp">

                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@android:color/transparent"
                                        android:fontFamily="@font/roboto"
                                        android:hint="Имя на карте"
                                        android:textAlignment="center"
                                        android:textColor="@color/black" />
                                </com.google.android.material.card.MaterialCardView>
                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="247.21dp"
                            android:layout_height="164.92dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:cardCornerRadius="6.58dp"
                            app:cardBackgroundColor="@color/grey_back"
                            android:layout_marginTop="39.5dp"
                            android:layout_marginEnd="16dp"
                            >
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="32dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:background="@color/white"
                                    android:layout_marginTop="23.5dp"
                                    />
                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="79.66dp"
                                    android:layout_height="37.2dp"
                                    android:layout_marginTop="67.48dp"
                                    android:layout_marginEnd="9.22dp"
                                    app:cardCornerRadius="4.61dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    >
                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@android:color/transparent"
                                        android:fontFamily="@font/roboto"
                                        android:hint="CVC"
                                        android:maxLength="3"
                                        android:inputType="number"
                                        android:textAlignment="center"
                                        android:textColor="@color/black" />
                                </com.google.android.material.card.MaterialCardView>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_add"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/roboto"
                    android:text="Добавить карту +"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:visibility="visible"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="@dimen/_10sdp" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/progress"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:layout_height="match_parent">
                <ProgressBar
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/white"
                    />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>