<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo_in_auth"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="56dp"
        />
    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="На номер +7 777 777 77 77 отправлен код"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        />
    <com.poovam.pinedittextfield.LinePinField
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:inputType="number"
        android:textSize="48sp"
        app:highlightType="currentField"
        app:noOfFields="4"
        app:distanceInBetween="15dp"
        app:fieldColor="@color/white"
        app:highlightColor="@color/white"
        app:lineThickness="2dp"
        app:isCustomBackground="false"
        app:isCursorEnabled="false"
        app:bottomTextPaddingDp="5dp"
        android:background="@color/black"
        android:id="@+id/edt_pin"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:textColor="@color/white"

        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_time_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="Отправить повторно 59с"
        android:visibility="visible"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:fontFamily="@font/roboto"
        android:enabled="false"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        />
    <View
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Продолжить"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto"
        android:backgroundTint="@color/grey"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cornerRadius="10dp"
        android:textAllCaps="false"
        android:enabled="false"
        />
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/white"
        android:visibility="gone"
        />
    <View
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />

</LinearLayout>